document.addEventListener("DOMContentLoaded", () => {
  // Inyectar estilos globales como <style>
  const estilo = `
    nav { display: flex; justify-content: center; background-color: #394049; padding: 1rem 0; }
    nav a { color: white; text-decoration: none; font-weight: bold; padding: 0.5rem 1rem; display: inline-block; }
    .menu-item { position: relative; margin: 0 20px; }
    .submenu { display: none; position: absolute; top: 100%; left: 0; background-color: #00A499; min-width: 160px; z-index: 1; }
    .submenu a { display: block; padding: 0.5rem 1rem; color: white; text-decoration: none; }
    .submenu a:hover { background-color: #394049; }
    .menu-item:hover .submenu { display: block; }
  `;
  const styleTag = document.createElement('style');
  styleTag.textContent = estilo;
  document.head.appendChild(styleTag);
});
