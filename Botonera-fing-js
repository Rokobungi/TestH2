document.addEventListener("DOMContentLoaded", () => {
  const menu = document.createElement("nav");
  menu.style.display = "flex";
  menu.style.justifyContent = "center";
  menu.style.backgroundColor = "#394049";
  menu.style.padding = "1rem 0";

  const opciones = [
    { texto: "Opción 1", sub: ["Subopción 1.1", "Subopción 1.2"] },
    { texto: "Opción 2", sub: ["Subopción 2.1", "Subopción 2.2"] },
    { texto: "Opción 3", sub: ["Subopción 3.1", "Subopción 3.2"] },
    { texto: "Inicio", link: "https://www.google.com" }
  ];

  opciones.forEach((opcion, index) => {
    const item = document.createElement("div");
    item.style.position = "relative";
    item.style.margin = "0 20px";

    const enlace = document.createElement("a");
    enlace.textContent = opcion.texto;
    enlace.href = opcion.link || "#";
    enlace.style.color = "white";
    enlace.style.textDecoration = "none";
    enlace.style.fontWeight = "bold";
    enlace.style.padding = "0.5rem 1rem";
    enlace.style.display = "inline-block";
    item.appendChild(enlace);

    if (opcion.sub) {
      const submenu = document.createElement("div");
      submenu.style.display = "none";
      submenu.style.position = "absolute";
      submenu.style.top = "100%";
      submenu.style.left = "0";
      submenu.style.backgroundColor = "#00A499";
      submenu.style.minWidth = "160px";
      submenu.style.zIndex = "1";

      opcion.sub.forEach(textoSub => {
        const subEnlace = document.createElement("a");
        subEnlace.textContent = textoSub;
        subEnlace.href = "#";
        subEnlace.style.display = "block";
        subEnlace.style.padding = "0.5rem 1rem";
        subEnlace.style.color = "white";
        subEnlace.style.textDecoration = "none";
        subEnlace.addEventListener("mouseover", () => {
          subEnlace.style.backgroundColor = "#394049";
        });
        subEnlace.addEventListener("mouseout", () => {
          subEnlace.style.backgroundColor = "#00A499";
        });
        submenu.appendChild(subEnlace);
      });

      item.appendChild(submenu);

      item.addEventListener("mouseover", () => submenu.style.display = "block");
      item.addEventListener("mouseout", () => submenu.style.display = "none");
    }

    menu.appendChild(item);
  });

  document.getElementById("botonera-fing").appendChild(menu);
});
